<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>Onnx</RootNamespace>
    <AssemblyName>Onnx.Net</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Models\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.15.6" />
    <PackageReference Include="Microsoft.ML.OnnxRuntime" Version="1.7.0" />
    <PackageReference Include="NumpyDotNet" Version="0.9.70" />
    <PackageReference Include="protobuf-net" Version="3.0.73" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="protogen onnx-data.proto3 onnx-ml.proto3 onnx-operators-ml.proto3 --proto_path=./onnx --csharp_out=./Models --package=onnx" />
  </Target>
</Project>
